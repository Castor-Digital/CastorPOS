<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#EEEEEE">

    <TextView
        android:id="@+id/server_sidebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servers"
        android:textColor="#FF000000"
        android:textSize="24sp"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/server_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:layout_marginBottom="8dp" /> <!-- Add background and padding to the list -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:layout_marginBottom="8dp"> <!-- Add background and padding to the add server section -->

        <EditText
            android:id="@+id/server_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter server name"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/add_server_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Server" />
    </LinearLayout>
</LinearLayout>
