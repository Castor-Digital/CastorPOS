<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#333333">

    <!-- Server Sidebar -->
    <LinearLayout
        android:id="@+id/server_sidebar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#555555">

        <!-- Title for Servers -->
        <TextView
            android:id="@+id/servers_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servers:"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/server_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="#FFFFFF" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AAAAAA"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Add Server Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#555555">

            <EditText
                android:id="@+id/server_name_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Add a server"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:inputType="textCapWords" />

            <Button
                android:id="@+id/add_server_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:padding="8dp"
                android:background="#012741"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AAAAAA"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Customer Section -->
        <TextView
            android:id="@+id/customer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="# of Customers:"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/customer_button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textSize="24sp"
                android:padding="8dp"
                android:background="#012741"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/customer_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textSize="24sp"
                android:padding="8dp"
                android:background="#012741"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/customer_button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="24sp"
                android:padding="8dp"
                android:background="#012741"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/customer_button4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:textSize="24sp"
                android:padding="8dp"
                android:background="#012741"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/custom_number_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Custom"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:inputType="number" />

            <Button
                android:id="@+id/save_custom_number_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:padding="8dp"
                android:background="#012741"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <!-- Calculator Section -->
    <LinearLayout
        android:id="@+id/calculator_section"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Main Display with Operation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/operation_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="18sp"
                android:padding="2dp"
                android:textColor="#AAAAAA" />

            <EditText
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:gravity="end"
                android:textSize="32sp"
                android:padding="8dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:textColor="#000000"
                android:textColorHint="#AAAAAA" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="5"
            android:layout_gravity="center">

            <Button
                android:id="@+id/button7"
                style="@style/CalculatorButton"
                android:layout_row="0"
                android:layout_column="0"
                android:text="7"
                android:textSize="42sp" />

            <Button
                android:id="@+id/button8"
                style="@style/CalculatorButton"
                android:layout_row="0"
                android:layout_column="1"
                android:text="8"
                android:textSize="42sp" />

            <Button
                android:id="@+id/button9"
                style="@style/CalculatorButton"
                android:layout_row="0"
                android:layout_column="2"
                android:text="9"
                android:textSize="42sp" />

            <Button
                android:id="@+id/buttonDivide"
                style="@style/CalculatorButton"
                android:layout_row="0"
                android:layout_column="3"
                android:text="/"
                android:textSize="42sp" />

            <Button
                android:id="@+id/button4"
                style="@style/CalculatorButton"
                android:layout_row="1"
                android:layout_column="0"
                android:text="4"
                android:textSize="42sp" />

            <Button
                android:id="@+id/button5"
                style="@style/CalculatorButton"
                android:layout_row="1"
                android:layout_column="1"
                android:text="5"
                android:textSize="42sp" />

            <Button
                android:id="@+id/button6"
                style="@style/CalculatorButton"
                android:layout_row="1"
                android:layout_column="2"
                android:text="6"
                android:textSize="42sp" />

            <Button
                android:id="@+id/buttonMultiply"
                style="@style/CalculatorButton"
                android:layout_row="1"
                android:layout_column="3"
                android:text="*"
                android:textSize="42sp" />

            <Button
                android:id="@+id/buttonCalc1"
                style="@style/CalculatorButton"
                android:layout_row="2"
                android:layout_column="0"
                android:text="1"
                android:textSize="42sp" />

            <Button
                android:id="@+id/buttonCalc2"
                style="@style/CalculatorButton"
                android:layout_row="2"
                android:layout_column="1"
                android:text="2"
                android:textSize="42sp" />

            <Button
                android:id="@+id/buttonCalc3"
                style="@style/CalculatorButton"
                android:layout_row="2"
                android:layout_column="2"
                android:text="3"
                android:textSize="42sp" />

            <Button
                android:id="@+id/buttonSubtract"
                style="@style/CalculatorButton"
                android:layout_row="2"
                android:layout_column="3"
                android:text="-"
                android:textSize="42sp" />

            <Button
                android:id="@+id/button0"
                style="@style/CalculatorButton"
                android:layout_row="3"
                android:layout_column="0"
                android:text="0"
                android:textSize="42sp" />

            <Button
                android:id="@+id/buttonClear"
                style="@style/CalculatorButton"
                android:layout_row="3"
                android:layout_column="1"
                android:text="C"
                android:textSize="42sp" />

            <Button
                android:id="@+id/buttonEquals"
                style="@style/CalculatorButton"
                android:layout_row="3"
                android:layout_column="2"
                android:text="="
                android:textSize="42sp" />

            <Button
                android:id="@+id/buttonAdd"
                style="@style/CalculatorButton"
                android:layout_row="3"
                android:layout_column="3"
                android:text="+"
                android:textSize="42sp" />

            <!-- Bottom row buttons -->
            <Button
                android:id="@+id/buttonSave"
                style="@style/CalculatorButton"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:backgroundTint="#4CAF50"
                android:text="Save ✔"
                android:textSize="28sp" />

            <Button
                android:id="@+id/buttonBackspace"
                style="@style/CalculatorButton"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_columnSpan="1"
                android:backgroundTint="#FF0000"
                android:text="⌫"
                android:textSize="48sp" />

            <Button
                android:id="@+id/buttonOpenRegister"
                style="@style/CalculatorButton"
                android:layout_row="4"
                android:layout_column="3"
                android:layout_columnSpan="1"
                android:backgroundTint="#6200EE"
                android:text="N/S"
                android:textSize="42sp" />
        </GridLayout>
    </LinearLayout>

    <!-- Right Sidebar -->
    <LinearLayout
        android:id="@+id/right_sidebar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#555555">

        <TextView
            android:id="@+id/results_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved Results:"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/results_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="#FFFFFF" />
    </LinearLayout>
</LinearLayout>

